<a href="/posts/{{url}}/" class="post-card {{#each tags}}tag-{{this}}{{/each}}">
    <div class="post-card-image-link post-card-image">
        <img src="/posts/{{url}}/{{imageUrl}}" alt="{{title}}" />
    </div>
    <div class="post-card-content">
        <small>{{#each tags}}{{#if @first}}{{this}}{{/if}}{{/each}}</small>
        <header class="post-card-header">
            <h2 class="post-card-title">{{title}}</h2>
        </header>
        <section class="post-card-excerpt">
            <p>{{excerpt}}</p>
        </section>
        <b>Read more &rarr;</b>
    </div>
</a>